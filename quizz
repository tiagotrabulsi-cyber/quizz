const results = {
  nordeste: {title:"Nordeste üáßüá∑", img:"https://i.imgur.com/h3sjClt.png", desc:"Praias ensolaradas, mar azul e muita energia positiva. Perfeito para relaxar a dois!"},
  chile: {title:"Chile üá®üá±", img:"https://i.imgur.com/1Oty9wh.png", desc:"Montanhas geladas, vin√≠colas e charme do sul. Um destino elegante e aconchegante."},
  buenosaires: {title:"Buenos Aires üá¶üá∑", img:"https://i.imgur.com/L6a0spz.png", desc:"Cultura, gastronomia e romance urbano. Para casais que amam explorar a cidade."},
  cruzeiro: {title:"Cruzeiro üö¢", img:"https://i.imgur.com/5uqfs4K.png", desc:"Conforto, praticidade e muito relax. Navegar juntos e se desconectar do mundo."},
  puntacana: {title:"Punta Cana üèùÔ∏è", img:"https://i.imgur.com/5nijAeH.png", desc:"Resorts paradis√≠acos, clima tropical e descanso absoluto. Um verdadeiro para√≠so a dois."}
};

const container = document.getElementById("quiz-container");
let currentIndex = 0;
let userSelections = [];

function showQuestion(index){
  container.innerHTML = "";
  const q = questions[index];

  const page = document.createElement("div");
  page.classList.add("question-page","active");

  const card = document.createElement("div");
  card.classList.add("question-card");

  const textDiv = document.createElement("div");
  textDiv.classList.add("question-text");
  textDiv.innerHTML = `<h2>${q.question}</h2>`;

  const optionsDiv = document.createElement("div");
  optionsDiv.classList.add("options");

  q.answers.forEach(ans=>{
    const opt = document.createElement("div");
    opt.classList.add("option-card");
    opt.innerHTML = `<img src="${ans.img}" alt="${ans.text}"><p>${ans.text}</p>`;
    opt.addEventListener("click",()=>{
      userSelections.push(ans.value);
      if(currentIndex+1<questions.length){
        currentIndex++;
        showQuestion(currentIndex);
      } else {
        showResult();
      }
    });
    optionsDiv.appendChild(opt);
  });

  card.appendChild(textDiv);
  card.appendChild(optionsDiv);
  page.appendChild(card);
  container.appendChild(page);
}

function showResult(){
  container.style.display="none";
  const counts = userSelections.reduce((acc,val)=>{
    acc[val] = (acc[val]||0)+1;
    return acc;
  },{});
  const finalChoice = Object.keys(counts).reduce((a,b)=>counts[a]>counts[b]?a:b);
  const res = results[finalChoice];
  document.getElementById("result-title").textContent = res.title;
  document.getElementById("result-img").src = res.img;
  document.getElementById("result-desc").textContent = res.desc;
  document.getElementById("result").style.display="flex";
}

showQuestion(currentIndex);
</script>

